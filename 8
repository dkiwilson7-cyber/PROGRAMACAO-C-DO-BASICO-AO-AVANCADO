/*  1.8 - Leia quatro notas, calcule a média aritmética e imprima o resultado.  */


#include <stdio.h>
#include <stdlib.h>

int main()
{
    float n1, n2, n3, n4, media;

    printf("Digite quatro notas do aluno: \n");
    scanf("%f %f %f %f", &n1, &n2, &n3, &n4);

    media = (n1 + n2 + n3 + n4)/4;

    printf("A media do aluno eh: %.2f\n", media);

    system("pause");
    return 0;
}
