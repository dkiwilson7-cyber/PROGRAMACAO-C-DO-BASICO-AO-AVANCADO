/*  1.4 - Peça ao usuário para digitar três valores inteiros e imprima a soma deles.  */


#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n1, n2, n3, soma;

    printf("Digite tres valores inteiros: \n");
    scanf("%d %d %d", &n1, &n2, &n3);

    soma = n1 + n2 + n3;

    printf("Soma dos tres numeros: %d\n", soma);

    system("pause");
    return 0;
}
